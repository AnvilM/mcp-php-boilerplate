{
  "name": "anvil/mcp-php-boilerplate",
  "description": "MCP PHP boilerplate",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "anvilm",
      "email": "211anvil112@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Application\\": "app/",
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^8.5",
    "monolog/monolog": "^3.9",
    "php-di/php-di": "^7.1",
    "mcp/sdk": "^0.2",
    "nyholm/psr7": "^1.8",
    "nyholm/psr7-server": "^1.1",
    "laminas/laminas-httphandlerrunner": "^2.13",
    "oscarotero/env": "^2.1",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "pestphp/pest": "^4.2",
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.92"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "pestphp/pest-plugin": true
    }
  }
}
